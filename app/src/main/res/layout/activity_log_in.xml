<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.tomaszow.hackathon.hackathon.activities.LogInActivity">

    <EditText
        style="@style/EditTextLogin"
        android:text="joestevens"
        android:id="@+id/activityLogIn_EditText_Email"
        android:layout_above="@+id/activityLogIn_EditText_Password"
        android:layout_alignParentStart="true" />
    <EditText
        style="@style/EditTextLogin"
        android:text="secret123"
        android:id="@+id/activityLogIn_EditText_Password"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/ButtonLogInActivity"
        android:text="@string/log_in_button"
        android:id="@+id/activityLogIn_Button_LogIn"
        android:layout_above="@+id/activityLogIn_Button_Register"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/ButtonLogInActivity"
        android:background="@color/bg"
        android:text="@string/create_account_button"
        android:textColor="#4d4d4d"
        android:id="@+id/activityLogIn_Button_Register"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
