<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.tomaszow.hackathon.hackathon.activities.RegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <EditText
                style="@style/EditTextLogin"
                android:hint="username"
                android:id="@+id/activityRegister_EditText_UserName"
                android:layout_marginRight="20dp"
                />

            <EditText
                style="@style/EditTextLogin"
                android:hint="firstName"
                android:layout_marginRight="20dp"
                android:id="@+id/activityRegister_EditText_FirstName"
                 />

            <EditText
                style="@style/EditTextLogin"
                android:hint="lastName"
                android:layout_marginRight="20dp"
                android:id="@+id/activityRegister_EditText_LastName"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:id="@+id/activityRegister_ImageView_Avatar" />
    </LinearLayout>

    <EditText
        style="@style/EditTextLogin"
        android:hint="email"
        android:id="@+id/activityRegister_EditText_Email"
        />
    <EditText
        style="@style/EditTextLogin"
        android:hint="password"
        android:id="@+id/activityRegister_EditText_Password"
        />
    <EditText
        style="@style/EditTextLogin"
        android:hint="phone"
        android:id="@+id/activityRegister_EditText_Phone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/ButtonLogInActivity"
            android:text="@string/create_account_button"
            android:id="@+id/activityRegister_Button_CreateAcctoun"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
